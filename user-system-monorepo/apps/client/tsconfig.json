// user-system-monorepo/apps/client/tsconfig.json
{
  "extends": "../../tsconfig.base.json", // 专 转 拽抓 住住
  "compilerOptions": {
    //  **住驻/注 专转 拽专转 注专 驻专拽 React/Vite:**
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // 住驻专转 JavaScript 住专转
    "module": "ESNext", // 住 
    "moduleResolution": "bundler", // 砖转 驻转专  (砖 注专 Vite)
    "allowImportingTsExtensions": true, // 驻砖专  注 住转 .ts/.tsx
    "esModuleInterop": true, // 驻砖专   CommonJS 专专转 
    "jsx": "react-jsx", // 拽驻爪转 JSX
    "noEmit": true, //  **砖 :** 注 -TypeScript 爪专 拽爪 JS 砖 (Vite 注砖 转)

    //  **专转   爪转 专  注专 砖 拽爪 (client app)
    // 注转 转专 转 (packages) -Monorepo 砖爪专转 拽爪 爪专:**
    // "composite": true,
    // "declaration": true,
    // "declarationMap": true,
    // "outDir": "./dist",
    // "rootDir": "./src",
    // "tsBuildInfoFile": "../../.tsbuildinfo/client.tsbuildinfo",

    "baseUrl": "./", // 住住 转 住
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"] // 转  砖转驻转
    },

    //  **住驻 专转 拽驻转 爪转:**
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  //  **注 转 -include   转  拽爪 -TypeScript/TSX -src**
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist"],
  //  **-references 专 住专, 驻 -shared**
  "references": [
    { "path": "../../packages/shared" }
  ]
}
